	public void delete(String code) {
		// TODO Auto-generated method stub
		
	}

	@Override //수정?
	public void update(ProductVO vo) {
		// TODO Auto-generated method stub
		
	}

	@Override //2.상품검색
	public ProductVO read(String code) {
		// TODO Auto-generated method stub
		return null;
	} //Data Access Object

	
	
	
	
}
