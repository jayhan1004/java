package am;

import java.util.*;

public class Car { // 자바 빈(java bean)
	//필드(속성) - 브랜드명, 모델, 색, 주행거리, 연식
	private String company;
	private String model;
	private String color;
	private int distance;
	private String date;
	//private 쓰면 밖에서 데이터 못바꿈
	
	//기본생성자(오버로딩 ㅋㅋ)
	public Car() {}

	
	//생성자
	public Car(String company, String model, String color, int distance) {
		super();
		this.company = company;
		this.model = model;
		this.color = color;
		this.distance = distance;
	}


	//오른쪽클릭 - source - generate getters and setters
	//값을 가져올때는 get, 값을 입력할때는 set
	public String getCompany() {return company;}
	public void setCompany(String company) {this.company = company;}
	public String getModel() {return model;}
	public void setModel(String model) {this.model = model;}
	public String getColor() {return color;}
	public void setColor(String color) {this.color = color;}
	public int getDistance() {return distance;}
	public void setDistance(int distance) {this.distance = distance;}
	public String getDate() {return date;}
	public void setDate(String date) {this.date = date;}


	//메소드
	public void print() {
		System.out.println("회사:" + company);
		System.out.println("모델:" + model);
		System.out.println("색상:" + color);
		System.out.println("주행거리:" + distance);
		System.out.println("연식:" + date);
		
		
		
	}
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
}
